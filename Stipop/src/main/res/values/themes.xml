<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Stipop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="tabStyle">@style/StipopSdkTab</item>
    </style>

    <style name="StipopSdkTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="minHeight">?actionBarSize</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>1
        <item name="android:textSize">16sp</item>
    </style>
</resources>