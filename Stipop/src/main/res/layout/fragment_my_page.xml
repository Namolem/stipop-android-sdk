<?xml version="1.0" encoding="utf-8"?>
<io.stipop.refactor.present.ui.components.core.SPLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <io.stipop.refactor.present.ui.components.common.SPMyPackageToggleButton
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/my_package_toggle_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:gravity="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/active_package_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="64dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <io.stipop.refactor.present.ui.components.core.SPRecyclerView
        android:id="@+id/hidden_package_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="64dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <io.stipop.refactor.present.ui.components.core.SPTextView
        android:id="@+id/noneTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_result"
        android:textColor="@color/c_374553"
        android:textStyle="bold"
        android:visibility="gone" />

</io.stipop.refactor.present.ui.components.core.SPLinearLayout>
