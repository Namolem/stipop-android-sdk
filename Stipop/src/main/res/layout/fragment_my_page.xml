<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="136dp"
            android:paddingHorizontal="12dp"
            android:paddingBottom="64dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none" />

    <io.stipop.extend.StipopTextView
            android:id="@+id/noneTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_result"
            android:textColor="@color/c_374553"
            android:textStyle="bold"
            android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <io.stipop.extend.StipopTextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/stickerTypeTV"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="64dp"
                android:tag="1"
                android:gravity="center"
                android:background="@drawable/my_page_toggle_background"
                android:textColor="#374553"
                android:textStyle="bold"
                android:text="@string/view_hidden_stickers" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
