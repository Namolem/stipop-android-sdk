<?xml version="1.0" encoding="utf-8"?>
<io.stipop.refactor.present.ui.components.core.SPLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.stipop.refactor.present.ui.components.common.SPSearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="12dp">

    </io.stipop.refactor.present.ui.components.common.SPSearchBar>

    <io.stipop.refactor.present.ui.components.core.SPLinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/searchbarLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/search_bar"
        android:visibility="gone"
        android:orientation="horizontal">

        <io.stipop.refactor.present.ui.components.common.SPIconImageView
            android:id="@+id/searchIconIV"
            android:padding="12dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_search" />

        <io.stipop.refactor.present.ui.components.core.SPEditText
            android:id="@+id/keywordET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/search"
            android:textColorHint="#646f7c"
            android:background="@null"
            android:imeOptions="actionSearch" />

        <io.stipop.refactor.present.ui.components.common.SPIconImageView
            android:id="@+id/eraseIV"
            android:padding="12dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_erase_border_3" />

    </io.stipop.refactor.present.ui.components.core.SPLinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/store_all_package_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingBottom="64dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="vertical"
            android:listSelector="@android:color/transparent"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_package_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingBottom="64dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="vertical"
            android:listSelector="@android:color/transparent"
            android:visibility="gone" />


    </FrameLayout>

</io.stipop.refactor.present.ui.components.core.SPLinearLayout>
