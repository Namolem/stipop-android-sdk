<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="13dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_share"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/packageIV"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/packageNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Olli's Camping Message" />

            <TextView
                android:id="@+id/artistNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#bababa"
                android:textStyle="bold"
                android:text="Â©twistolive" />

            <TextView
                android:id="@+id/downloadTV"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="DOWNLOAD"
                android:background="@drawable/detail_download_btn_background"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>